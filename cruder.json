{
    "name": "cruder",
    "install": true,
    "framework": "express",
    "database": "mongo",
    "orm": "mongoose",
    "output": "build",
    "entry": "src",
    "language": "js",
    "module": "es5",
    "env": ".env",
    "db_url": "mongodb://localhost:27017/cruder",
    "port": 8000,
    "entry_file": "index",
    "route_folder": "routes",
    "schema_folder": "schemas",
    "schemas": [
        {
            "account": [
                {
                    "name": "username",
                    "type": "String"
                },
                {
                    "name": "password",
                    "type": "String",
                    "additional": {
                        "unique": true,
                        "trim": true
                    }
                }
            ]
        },
        {
            "token": [
                {
                    "name": "token",
                    "type": "String"
                },
                {
                    "name": "date",
                    "type": "Date"
                }
            ]
        }
    ],
    "routes": [
        {
            "path": "/account",
            "auth": false,
            "crud": "all",
            "schema": "account"
        },
        {
            "path": "/token",
            "auth": false,
            "crud": [
                "GET",
                "DELETE"
            ],
            "schema": "token"
        }
    ]
}